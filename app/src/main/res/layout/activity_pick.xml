<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              tools:context=".view.PickImgFromGallery"
>
    <TextView android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:id="@+id/Result_text"
              android:text="Pick Image from Gallery"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textSize="20dp"

    />
    <ImageView android:layout_width="300dp"
               android:layout_height="300dp"
               android:id="@+id/gall_img"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_remove_red_eye_black_24dp"
               android:padding="20dp"
               android:layout_marginTop="20dp"
    />

    <Button android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/gall_pick_button"
            android:text="Choose Image"
            android:background="#31a857"
            android:padding="10dp"
            android:layout_marginTop="20dp"


    />
    <Button android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/classify_button"
            android:text="Classify Image"
            android:background="#31a857"
            android:padding="10dp"
            android:layout_marginTop="20dp"


    />

</LinearLayout>